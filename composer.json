{
    "name": "ilicmiljan/weighted-ratings",
    "description": "A lightweight PHP library for calculating the Wilson Lower Bound Score and Bayesian Approximation weights for sorting algorithms based on user feedback.",
    "keywords": ["rating", "review", "weight", "weighted-ratings", "sorting-weights", "reviews-sorting"],
    "type": "library",
    "autoload": {
        "psr-4": {
            "IlicMiljan\\WeightedRatings\\": "src/"
        },
        "exclude-from-classmap": [
            "/tests/"
        ]
    },
    "authors": [
        {
            "name": "Miljan IliÄ‡",
            "email": "hello@miljanilic.com"
        }
    ],
    "license": "MIT",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "*"
    },
    "scripts": {
        "post-install-cmd": [
            "./vendor/bin/phpunit"
        ],
        "post-update-cmd" : [
            "./vendor/bin/phpunit"
        ]
    }
}
